{
  "name": "qr-generator-studio",
  "version": "2.0.0",
  "description": "Sistema de gestión de asistencia y tareas mediante códigos QR integrado con Odoo ERP",
  "author": "Tu Empresa",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "health": "curl http://localhost:3000/api/health",
    "env:example": "cp .env.example .env.local && echo ✅ Archivo .env.local creado",
    "clean": "rm -rf .next",
    "reinstall": "npm run clean && npm install"
  },
  "keywords": [
    "qr",
    "attendance",
    "odoo",
    "erp",
    "time-tracking",
    "nextjs"
  ],
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html5-qrcode": "^2.3.8",
    "lucide-react": "^0.562.0",
    "next": "16.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
